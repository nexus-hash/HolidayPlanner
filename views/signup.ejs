              <div class="p-2 w-1/3">
                <input name="middlename" id="middlename"class="w-full bg-gray-900 rounded border text-white border-gray-900 focus:outline-none focus:border-purple-500 text-base px-2 py-2 font-mono " placeholder="Middle Name" type="text" required>
              </div>
              <div class="p-2 w-1/3">
                <input name="lastname" id="lastname"class="w-full bg-gray-900 rounded border text-white border-gray-900 focus:outline-none focus:border-purple-500 text-base px-2 py-2 font-mono" placeholder="Last Name" type="text" required>
              </div>
              <div class="p-2 w-1/2">
                <input name="dob" id="dob" class="w-full bg-gray-900 rounded border text-white border-gray-900 focus:outline-none focus:border-purple-500 text-base px-2 py-2 font-mono" placeholder="DOB" type="date" required>
              </div>
              <div class="p-2 w-1/2">
                <input name="phno" id="phno"class="w-full bg-gray-900 rounded border text-white border-gray-900 focus:outline-none focus:border-purple-500 text-base px-2 py-2 font-mono" placeholder="Phone Number" required type="tel" required>
              </div>
              
              <div class="p-2 w-full">
                <input name="email" id="email" class="w-full bg-gray-900 rounded border text-white border-gray-900 focus:outline-none focus:border-purple-500 text-base px-2 py-2 font-mono" placeholder="Email" type="email" required>
              </div>
              <div class="p-2 w-1/2">
              <input name="password" id="password" type="password" class="bg-gray-900 w-full tracking-widest rounded border font-mono text-white border-gray-900 focus:outline-none focus:border-purple-500 text-base px-2 py-2" placeholder="Password" required>
            </div>
              <div class="p-2 w-1/2">
                <input name="conpassword" id="conpassword" type="password" class=" bg-gray-900 w-full tracking-widest rounded border font-mono text-white border-gray-900 focus:outline-none focus:border-purple-500 text-base px-2 py-2" placeholder=" Confirm Password" required>
                </div>
                <div class="p-2 w-full">
                  <input name="Address" id="Address"class="w-full bg-gray-900 rounded border text-white border-gray-900 focus:outline-none focus:border-purple-500 text-base px-2 py-2 font-mono" placeholder="Address" type="text" required>
                </div>
              <div class="p-2 w-full">
                <button class="flex mx-auto text-white bg-purple-500 border-0 py-2 px-8 focus:outline-none hover:bg-purple-600 rounded text-lg">Sign Up</button>
              </div>
            </div>
